@model Exercicio_03.Models.Produto

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}


@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Título")
        @Html.TextBoxFor(p => p.Titulo, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Valor")
        @Html.TextBoxFor(p => p.Valor, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Data de Cadastro")
        @Html.TextBoxFor(p => p.DataCadastro, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Descrição")
        @Html.TextAreaFor(p => p.Descricao, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Nacional)
        @Html.CheckBoxFor(p => p.Nacional)
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
}
